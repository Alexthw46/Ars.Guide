---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro';
import SearchModal from '../components/search/Modal.astro';

const { layout, collection, sidebar } = Astro.props;
---

<!DOCTYPE html>
<html lang={Astro.currentLocale} data-bs-theme="auto">
  <head>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta charset="utf-8" />
    <slot name="head" />
  </head>
  <body class={`single ${layout}`} data-bs-spy="scroll" data-bs-target="#toc" data-bs-root-margin="0px 0px -60%" data-bs-smooth-scroll="true">
    <Navbar active={collection} sidebar={sidebar} />
    <SearchModal />
    <slot />
    <Footer />
  </body>
</html>

<script>
  import 'bootstrap/dist/js/bootstrap.bundle.min.js'
</script>

<style is:global lang="scss">
  @import "../styles//main.scss";
</style>

<script src="../scripts/color-mode.js"></script>
