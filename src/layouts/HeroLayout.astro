---
import BaseLayout from "./BaseLayout.astro"

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} layout="home">
    <div class="wrap container-lg" role="document">
        <div class="content">
            <section class="section container-fluid mt-n3 pb-3">
                <div class="row justify-content-center">
                    <div class="col-lg-12 text-center">
                        <h1>{frontmatter.title}</h1>
                    </div>
                    <div class="col-lg-9 col-xl-8 text-center">
                        <p class="lead">
                            Your un-official written guide for the technical side of Ars Nouveau
                        </p>
                        <a href="/docs/" class="btn btn-primary btn-cta rounded-pill btn-lg my-3" role="button">
                        Start Learning</a>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="d-flex justify-content-start">
        <div class="bg-dots"></div>
    </div>
    <section class="section section-md section-features">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-5">
                    <h2 class="h4">Mechanic Tweaks</h2>
                    <p>Re-introduce <a href="/kubejs/tweaks/wilden/#re-enable-random-wilden-spawns">old Ars mechanics</a> back into the game.</p>
                </div>
                <div class="col-lg-5">
                    <h2 class="h4">Sourcelink Tech Specs</h2>
                    <p>Learn the math behind the <a href="/docs/sourcelinks/agronomic-sourcelink/">Sourcelinks</a> to optimise your source generation.</p>
                </div>
                <div class="col-lg-5">
                    <h2 class="h4">Example Recipes</h2>
                    <p>Find out how to add your own <a href="/kubejs/recipes/caster_tomes/#add-a-new-caster-tome">Caster Tomes</a>!</p>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
